@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style type="text/css">
    body
    {
      height: 100vh;

      background-color: #f5f7fa;
    }
    form
    {
      width: 380px;
      height: 600px;

      background-color: white;
      border-radius: 12px;
      box-shadow: 0 3px 6px hsla(0, 0%, 0%, 0.1);
    }
    media (max-width : 600px)
    {
        form
        {
          height: 100%;
        }
    }
</style>


